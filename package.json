{
  "name": "wheres-the-flag",
  "displayName": "WTF: Where's the flag?",
  "version": "0.0.1",
  "description": "Fix flag emojis on Windows üåç",
  "author": "Ahmed Hassanein",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "version": "0.0.1",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_title": "Flags Fixer"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "assets/flags/4x3/*.svg"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  },
  "plasmo": {
    "contents": [
      {
        "matches": [
          "<all_urls>"
        ],
        "entry": "./contents/flag-fixer-ui.tsx"
      }
    ],
    "background": {
      "entry": "./background.ts"
    }
  },
  "assets": [
    "assets/flags/4x3/**/*.svg"
  ]
}
